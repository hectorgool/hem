<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="page-header">
        <h1>Únete a este proyecto.</h1>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--<%= devise_error_messages! %>-->

        <%= f.input :firstname, autofocus: true, label: 'Nombres' %>

        <%= f.input :lastname, label: 'Apellidos' %>

        <%= f.input :email, label: 'Correo' %>
        
        <%= f.input :password, autocomplete: "off", label: 'Contraseña' %>

        <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %>
      
        <%= f.input :password_confirmation, autocomplete: "off", label: 'Confirmar Contraseña' %>
      
        <%= f.button :submit, "Regístrame", class: "btn btn-success btn-lg btn-block" %>
      
      <% end %>

      <%= render "devise/shared/links" %>

      <!--<p class="lead text-center">OR</p>-->

      <%= 
        #render "layouts/links" 
      %> 

    </div>
  </div>
</div>