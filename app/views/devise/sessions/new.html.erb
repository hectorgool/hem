<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-body">
    
      <div class="page-header">
        <h1>
          ¿Tienes cuenta?
        </h1>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>
        <% flash.each do |key, value| %>
          <div class="alert alert-danger flash <%= key %>" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= value %> 
          </div>
        <% end %>
        
        <%= f.input :email, autofocus: true, class: "form-control input-lg" %>
      
        <%= f.input :password, autocomplete: "off", class: "form-control input-lg" %>
        
        <% if devise_mapping.rememberable? -%>
          <input type="checkbox" name="user[remember_me]" value="1" checked="checked" />
          <%= f.label :remember_mee, 'Recordar mis datos' %>
        <% end -%>

        <%= f.button :submit, "Iniciar Sesión", class: "btn btn-info btn-lg btn-block" %>

      <% end %>

      <%= render "devise/shared/links" %>

      <!--<p class="lead text-center">OR</p>-->

      <%= 
        #render "layouts/links" 
      %> 
      
    </div>
  </div>
</div>
