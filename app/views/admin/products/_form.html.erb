<%= simple_form_for([:admin, @product]) do |f| %>

  <%= f.input :name, label: 'Nombre', placeholder: 'Nombre' %>

  <!--<label for="description">Descripción</label>-->

  <%= f.input :description, 
    as: :text, 
    label: 'Descripción',
    class: 'form-control input-lg',
    placeholder: 'Descripción', 
    rows: '100'
  %>

  <div class="panel panel-default">
    <div class="panel-body">

      <div id="attachments">
        <h3>Imágenes</h3>
        <%= render partial: "attachments/form", locals: { f: f, index: 0 } %>
      </div>

      <p>
        <%= 
          link_to "Agregar otra imágen", 
          new_attachment_path, 
          remote: true, 
          id: "add_file", 
          data: { params: {index: product.attachments.size} },
          class: 'btn btn-default btn-lg btn-block',
          role: 'button'
        %>
      </p>

    </div>
  </div>
  
  <%= f.button :submit, "Guardar Producto", class: 'btn btn-info btn-lg btn-block' %>

<% end %>