
<% admins_only do %>
  <div class="panel panel-default">
    <div class="panel-body">
      <h1>
        Categorías
        <%= link_to new_admin_category_url, :class => 'btn btn-success btn-lg pull-right', :id => 'new_category' do %>
          <i class="glyphicon glyphicon-plus new-product"></i> Agregar Categoría
        <% end %>
      </h1>
    </div>
  </div>
<% end %>

<%= 
  #render "layouts/search" 
%>

<div class="table-responsive">
<table class="table table-bordered table-striped">

  <thead>
    <tr>
      <td class="text-right">
        <strong>#</strong>
      </td>
      <td>
        <strong>Nombre</strong>
      </td>
      <td class="text-center">
        <strong>Editar</strong>
      </td>
      
      <td class="text-center">
        <strong>Borrar</strong>
      </td>
    </tr>
  </thead>

  <tbody>
    <% @categories.each_with_index do |category, n| %>
    <tr>
      <td class="text-right">
        <%= link_to n + 1, admin_category_url(category.id) %>
      </td>
      <td>
        <%= link_to category.name, admin_category_url(category.id) %>
      </td>
      <td class="text-center">
        <%= link_to edit_admin_category_url(category.id), :class => "btn btn-primary btn-lg" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to admin_category_url(category.id),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this category?" },
          class: "btn btn-danger btn-lg" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </td>
    </tr>
    <% end %>

  <tbody>

  <tfoot>
    <tr>
      <td class="text-right">
        <strong>#</strong>
      </td>
      <td>
        <strong>Nombre</strong>
      </td>
      <td class="text-center">
        <strong>Editar</strong>
      </td>
      
      <td class="text-center">
        <strong>Borrar</strong>
      </td> 
    </tr>
  </tfoot>

</table>
</div>

